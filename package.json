{
  "name": "keys-practice-app",
  "version": "1.0.0",
  "description": "Practice your keyboard or whatever instrument you play with a web app",
  "main": "src/scripts/bundle.js",
  "scripts": {
    "start": "npm run watch-js ",
    "build": "npm run build-js && npm run build-static && cp src/index.html dist",
    "watch-js": "rollup -wc build/rollup.config.js",
    "build-js": "rollup -c build/rollup.config.js",
    "build-static": "rsync -rm src/static dist",
    "type-check": "tsc --noEmit",
    "release": "npm run build && npm version patch",
    "serve": "node server/index.js",
    "bundlesize": "bundlesize --config bundlesize.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mathieu-R/keys-practice-app.git"
  },
  "keywords": [
    "keys",
    "musician",
    "practice"
  ],
  "author": "Mathieu Rousseau <mathieu0709@gmail.com> (https://github.com/Mathieu-R)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mathieu-R/keys-practice-app/issues"
  },
  "homepage": "https://github.com/Mathieu-R/keys-practice-app#readme",
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "adaro": "^1.0.4",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.17.0",
    "rollup-plugin-loadz0r": "^0.7.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.22.1",
    "serve-static": "^1.14.1",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "tslint": "^5.18.0"
  }
}
